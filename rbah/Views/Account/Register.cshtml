@model rbah.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

<h2>Регистрация пользователя</h2>
@using (Html.BeginForm())
{
    
    @Html.AntiForgeryToken()
<table class="public">
    <tr>
        <td class="autor">
            Логин
        </td>
        <td>
            @Html.EditorFor(x => x.name)
        </td>
    </tr>

    <tr>
        <td class="autor">
            Email
        </td">
        <td>
            @Html.EditorFor(x => x.email)
        </td>
    </tr>

    <tr>
        <td class="autor">
            Пароль
        </td>
        <td>
            @Html.EditorFor(x => x.password)
        </td>
    </tr>

    <tr>
        <td class="autor">
            Подтверждение пароля
        </td>
        <td>
            @Html.EditorFor(x => x.passwordConfirm)
        </td>
    </tr>
</table>
    <button type="submit" style="margin-top:10px;height:50px;width: 80%;margin-left:10%;">Зарегистрировать</button>
}
